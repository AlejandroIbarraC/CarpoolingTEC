<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BarCodeReader" tools:layout_editor_absoluteY="81dp">

    <Button
            android:text="Exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/exitButton"
            android:onClick="exit"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/barcodeString"
            android:layout_marginEnd="16dp" android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"/>
    <SurfaceView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/surfaceView"
            android:layout_marginBottom="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/barcodeString"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/barcodeString"
            android:text="Scan the barcode"
            android:textSize="18sp"
            android:textAlignment="center" app:layout_constraintTop_toBottomOf="@+id/surfaceView"
            android:layout_marginBottom="114dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/exitButton" app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>