<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="25dp">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/background"
            android:id="@+id/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

    <ImageView
            android:layout_width="0dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/labellogo"
            android:id="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_marginBottom="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/riderButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            />

    <ImageView
            android:layout_width="243dp"
            android:layout_height="246dp"
            app:srcCompat="@drawable/carpoollogorounded"
            android:id="@+id/imageView3"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:layout_width="201dp"
            android:layout_height="75dp"
            android:id="@+id/riderButton"
            android:background="@drawable/rider"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            android:layout_marginBottom="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/driverButton"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="goToRiderView"/>

    <Button
            android:layout_width="209dp"
            android:layout_height="91dp"
            android:id="@+id/driverButton"
            android:background="@drawable/driver"
            app:layout_constraintTop_toBottomOf="@+id/riderButton"
            android:layout_marginBottom="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>