<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_main"
        tools:context=".MainActivity"
        tools:layout_editor_absoluteY="25dp">


    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="716dp"
            app:srcCompat="@drawable/background"
            android:id="@+id/background"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="83dp"
            app:srcCompat="@drawable/labellogo"
            android:id="@+id/logoLabel"
            app:layout_constraintTop_toBottomOf="@+id/logoImage"
            android:layout_marginBottom="19dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/enterButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="37dp"
            android:layout_marginEnd="37dp"
            app:layout_constraintHorizontal_bias="1.0"/>

    <ImageView
            android:layout_width="243dp"
            android:layout_height="246dp"
            app:srcCompat="@drawable/carpoollogorounded"
            android:id="@+id/logoImage"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="17dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/logoLabel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

    <Button
            android:layout_width="201dp"
            android:layout_height="75dp"
            android:id="@+id/enterButton"
            app:layout_constraintTop_toBottomOf="@+id/logoLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:onClick="goToMainMenu"
            android:text="Enter the Matrix"
            android:layout_marginTop="68dp"/>

</android.support.constraint.ConstraintLayout>